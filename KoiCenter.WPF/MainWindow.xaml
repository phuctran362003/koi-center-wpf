<Window x:Class="KoiCenter.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoiCenter.WPF"
        mc:Ignorable="d"
        Title="Koi Management" Height="550" Width="1200">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="6*"/>
          
        </Grid.ColumnDefinitions>


        <StackPanel
            Grid.Column="0"
            Background="LightBlue"
            Orientation="Vertical" 
            Width="400" 
            HorizontalAlignment="Left">
            <Label Foreground="Red" FontWeight="Bold" FontSize="30" Content="Koi Fish Information"></Label>
            <Label>Koi Fish Id</Label>
            <TextBox></TextBox>
        </StackPanel>
    </Grid>
    
</Window>
